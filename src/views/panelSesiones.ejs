<!DOCTYPE html>
<html lang="es">

<head>
  <title><%= titulo %></title>
  <%- include("components/head") %>
</head>

<body>
  <%- include("components/menu") %>

  <main>
    <header>
      <h1><%= titulo %></h1>
    </header>

    <% if (mensaje) { %>
    <p style="color: red; text-align: center;"><%= mensaje %></p>
    <% } %>

    <table border="1" cellspacing="0" cellpadding="8" style="margin: auto;">
      <thead>
        <tr>
          <th>ID de Sesión</th>
          <th>UserID</th>
          <th>Usuario (email)</th>
          <th>Acción</th>
        </tr>
      </thead>
      <tbody>
        <% usuarios.forEach(usuario => { %>
        <tr>
          <td><%= usuario._id %></td>
          <td><%= usuario.name || 'No definido' %></td>
          <td><%= usuario.email || 'Desconocido' %></td>
          <td>
            <form method="POST" action="/panel-sesiones/eliminar/<%= usuario._id %>">
              <button type="submit" style="color: red;">Eliminar</button>
            </form>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </main>
</body>

</html>